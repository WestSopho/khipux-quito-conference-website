---
// Main sponsors (larger logos)
import khipuLogo from "../assets/partners/khipu-official-logo.svg";
import udlaLogo from "../assets/partners/udla-logo.svg";
import uideLogo from "../assets/partners/uide-logo.svg";

// Secondary sponsors (smaller logos)
import diversaLogo from "../assets/partners/diversa-logo.svg";
import galileoLogo from "../assets/partners/galileo-logo.svg";
import ubaLogo from "../assets/partners/uba-logo.svg";
---

<section class="bg-khipu-black text-khipu-white py-16">
  <div class="content-container flex flex-col items-center">
    <h2 class="mb-12 text-center text-4xl font-bold italic md:text-6xl">
      Institutional Partners
    </h2>

    <!-- Main Sponsors - Larger logos -->
    <div
      class="mb-12 flex w-full flex-wrap items-center justify-center gap-8 md:gap-12 lg:gap-16"
    >
      <img
        src={khipuLogo.src}
        alt="KHIPU - Official Partner"
        loading="lazy"
        decoding="async"
        width="288"
        height="80"
        class="h-auto w-full max-w-52 shrink md:max-w-64 lg:max-w-72"
      />
      <img
        src={udlaLogo.src}
        alt="UDLA - Universidad de Las AmÃ©ricas"
        loading="lazy"
        decoding="async"
        width="288"
        height="80"
        class="h-auto w-full max-w-52 shrink md:max-w-64 lg:max-w-72"
      />
      <img
        src={uideLogo.src}
        alt="UIDE - Universidad Internacional del Ecuador"
        loading="lazy"
        decoding="async"
        width="288"
        height="80"
        class="h-auto w-full max-w-52 shrink md:max-w-64 lg:max-w-72"
      />
    </div>

    <!-- Secondary Sponsors - Smaller logos -->
    <div
      class="flex w-full flex-wrap items-center justify-center gap-6 md:gap-10 lg:gap-12"
    >
      <img
        src={diversaLogo.src}
        alt="Diversa - Partner Organization"
        loading="lazy"
        decoding="async"
        width="192"
        height="60"
        class="h-auto w-full max-w-36 shrink md:max-w-44 lg:max-w-48"
      />
      <img
        src={galileoLogo.src}
        alt="Universidad Galileo - Academic Partner"
        loading="lazy"
        decoding="async"
        width="192"
        height="60"
        class="h-auto w-full max-w-36 shrink md:max-w-44 lg:max-w-48"
      />
      <img
        src={ubaLogo.src}
        alt="UBA - Universidad de Buenos Aires"
        loading="lazy"
        decoding="async"
        width="192"
        height="60"
        class="h-auto w-full max-w-36 shrink md:max-w-44 lg:max-w-48"
      />
    </div>
  </div>
</section>
