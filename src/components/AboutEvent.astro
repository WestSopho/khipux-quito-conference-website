<section id="about" class="bg-khipu-gray text-khipu-white py-16 md:py-24">
  <div class="content-container">
    <!-- Full-Width Intro -->
    <div class="mb-12 max-w-4xl">
      <h2 class="mb-6 text-4xl leading-tight font-bold md:text-5xl lg:text-6xl">
        About the <span class="text-khipu-orange">Event</span>
      </h2>

      <p class="mb-5 text-lg leading-relaxed font-semibold md:text-xl">
        KHIPUx Quito is a <span class="text-khipu-orange"
          >3-day hybrid event</span
        > designed to advance the role of Artificial Intelligence in biological and
        medical imaging across Latin America.
      </p>

      <p class="text-base leading-relaxed text-white/80 md:text-lg">
        Hosted by <span class="text-uide-orange font-bold"
          >Universidad Internacional del Ecuador (UIDE)</span
        >, we bring together students and early-career researchers from biology,
        medicine, data science, and AI. Engage in expert-led lectures, technical
        workshops, poster sessions, and a collaborative hackathon developing
        open-source AI tools for regional health challenges.
      </p>
    </div>

    <!-- Key Themes Section -->
    <div>
      <h3
        class="text-khipu-orange mb-8 text-xl font-bold tracking-wider uppercase md:text-2xl"
      >
        Key Themes
      </h3>

      <!-- Horizontal cards - 2x2 grid on desktop -->
      <div class="grid gap-4 md:grid-cols-2 lg:gap-6">
        {
          keyThemes.map((theme) => (
            <div class="border-khipu-orange flex items-center gap-5 border-l-4 bg-white/10 px-5 py-4 transition-transform duration-200 hover:-translate-y-1">
              <span class="text-khipu-orange flex-shrink-0" set:html={theme.icon} />
              <div class="flex-1">
                <h4 class="text-khipu-white text-base font-bold md:text-lg">
                  {theme.title}
                </h4>
                <p class="text-sm leading-relaxed text-white/70">
                  {theme.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
