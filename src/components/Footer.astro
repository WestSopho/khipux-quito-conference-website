---
import KhipuLogo from "../assets/khipu-logo-horizontal.svg";
---

<footer class="bg-khipu-orange relative overflow-hidden py-10">
  <div class="content-container">
    <!-- Content Container -->
    <div
      class="relative z-10 flex flex-col gap-8 md:flex-row md:justify-between"
    >
      <!-- Contact Info -->
      <div class="text-khipu-white">
        <p class="text-xl font-bold md:text-2xl">Contact email:</p>
        <a
          href="mailto:khipux.quito@udla.edu.ec"
          class="text-xl font-bold transition-opacity hover:opacity-80 md:text-2xl"
        >
          khipux.quito@udla.edu.ec
        </a>
      </div>

      <!-- Social Links -->
      <nav class="text-khipu-white flex flex-col gap-0.5">
        <a
          href="https://twitter.com/khaboris"
          target="_blank"
          rel="noopener noreferrer"
          class="text-xl font-bold transition-opacity hover:opacity-80 md:text-2xl"
        >
          Twitter
        </a>
        <a
          href="https://instagram.com/khipuai"
          target="_blank"
          rel="noopener noreferrer"
          class="text-xl font-bold transition-opacity hover:opacity-80 md:text-2xl"
        >
          Instagram
        </a>
        <a
          href="https://linkedin.com/company/khipu"
          target="_blank"
          rel="noopener noreferrer"
          class="text-xl font-bold transition-opacity hover:opacity-80 md:text-2xl"
        >
          LinkedIn
        </a>
        <a
          href="https://github.com/khipu-ai"
          target="_blank"
          rel="noopener noreferrer"
          class="text-xl font-bold transition-opacity hover:opacity-80 md:text-2xl"
        >
          Github
        </a>
        <a
          href="https://zenodo.org/communities/khipu"
          target="_blank"
          rel="noopener noreferrer"
          class="text-xl font-bold transition-opacity hover:opacity-80 md:text-2xl"
        >
          Zenodo
        </a>
      </nav>
    </div>

    <!-- Khipu Logo Decoration - Horizontal Full Width -->
    <div class="pointer-events-none mt-8">
      <KhipuLogo class="text-khipu-white h-auto w-full" />
    </div>
  </div>
</footer>
