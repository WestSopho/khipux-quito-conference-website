---
interface Props {
  name: string;
  country: string;
  institution: string;
  role: string;
  description: string;
  imageSrc: string;
  github?: string;
  linkedin?: string;
}

// Import bullet point SVGs
import bulletPoint1 from "../assets/desc-bulletpoint-1.svg";
import bulletPoint2 from "../assets/desc-bulletpoint-2.svg";
import bulletPoint3 from "../assets/desc-bulletpoint-3.svg";

const bulletPoints = [bulletPoint1, bulletPoint2, bulletPoint3];

const {
  name,
  country,
  institution,
  role,
  description,
  imageSrc,
  github,
  linkedin,
} = Astro.props;

// Split description by | and trim each part
const descriptionItems = description
  .split("|")
  .map((item) => item.trim())
  .filter(Boolean);

// Generate a seeded random index based on the item text (for consistency across renders)
function getRandomBullet(text: string, index: number) {
  const seed = text.length + index;
  return bulletPoints[seed % bulletPoints.length];
}
---

<article
  class="speaker-card group relative flex flex-col items-center gap-6 md:flex-row md:items-start md:gap-8"
>
  <!-- Speaker Image Container -->
  <div class="image-container relative w-48 shrink-0 md:w-56">
    <!-- Glowing backdrop on hover -->
    <div
      class="glow-effect bg-khipu-orange/0 group-hover:bg-khipu-orange/20 absolute -inset-2 rounded-lg blur-xl transition-all duration-500 ease-out"
    >
    </div>

    <img
      src={imageSrc}
      alt={name}
      loading="lazy"
      class="speaker-image border-khipu-orange group-hover:shadow-khipu-orange/30 relative aspect-square w-full rounded-sm border-l-4 object-cover shadow-lg transition-all duration-500 ease-out group-hover:-translate-x-3 group-hover:scale-105 group-hover:shadow-2xl"
    />
  </div>

  <!-- Speaker Info -->
  <div
    class="flex flex-col gap-2 text-center transition-all duration-300 md:text-left md:group-hover:translate-x-1"
  >
    <!-- Name and Social Links -->
    <div class="flex flex-col items-center gap-3 md:flex-row md:items-center">
      <h3
        class="text-khipu-orange group-hover:text-khipu-white text-2xl font-bold transition-all duration-300 md:text-3xl"
      >
        {name}
      </h3>
      <div class="flex items-center gap-3">
        {
          github && (
            <a
              href={github}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`${name}'s GitHub profile`}
              class="text-khipu-orange hover:text-khipu-white transition-all duration-300 hover:scale-110"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="h-6 w-6"
              >
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
            </a>
          )
        }
        {
          linkedin && (
            <a
              href={linkedin}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`${name}'s LinkedIn profile`}
              class="text-khipu-orange hover:text-khipu-white transition-all duration-300 hover:scale-110"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="h-6 w-6"
              >
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
            </a>
          )
        }
      </div>
    </div>

    <!-- Location & Institution -->
    <p class="text-khipu-orange text-lg italic md:text-xl">
      ({country}, {institution})
    </p>

    <!-- Role -->
    <p class="text-khipu-white text-base font-medium md:text-lg">
      {role}
    </p>

    <!-- Description with bullet points -->
    <ul class="mt-2 flex flex-col gap-2 text-left">
      {
        descriptionItems.map((item, index) => {
          const bullet = getRandomBullet(item, index);
          return (
            <li
              class="description-item text-khipu-white flex items-start gap-3 text-base italic opacity-80 transition-all duration-300 md:text-lg"
              style={`animation-delay: ${index * 50}ms`}
            >
              <img
                src={bullet.src}
                alt=""
                class="h-8 w-8 shrink-0 opacity-70 transition-all duration-300 group-hover:scale-110 group-hover:opacity-100"
                aria-hidden="true"
              />
              <span class="group-hover:text-khipu-white/90">{item}</span>
            </li>
          );
        })
      }
    </ul>
  </div>
</article>

<style>
  .speaker-card {
    cursor: default;
  }

  /* Stagger animation for description items on hover */
  .speaker-card:hover .description-item {
    opacity: 1;
  }

  .speaker-card:hover .description-item:nth-child(1) {
    transition-delay: 0ms;
  }
  .speaker-card:hover .description-item:nth-child(2) {
    transition-delay: 50ms;
  }
  .speaker-card:hover .description-item:nth-child(3) {
    transition-delay: 100ms;
  }
  .speaker-card:hover .description-item:nth-child(4) {
    transition-delay: 150ms;
  }
  .speaker-card:hover .description-item:nth-child(5) {
    transition-delay: 200ms;
  }
  .speaker-card:hover .description-item:nth-child(6) {
    transition-delay: 250ms;
  }
</style>
