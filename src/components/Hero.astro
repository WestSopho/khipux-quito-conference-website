---
// Hero component with responsive background images and overlay
import { Image } from "astro:assets";
import heroDesktop from "../assets/hero-image-desktop.webp";
import heroMobile from "../assets/hero-image-mobile.webp";
---

<section
  class="hero relative flex min-h-[80vh] w-full items-center justify-center overflow-hidden"
>
  <!-- Desktop Background Image - LCP element with high priority -->
  <Image
    src={heroDesktop}
    alt="KhipuX Quito Conference venue and attendees"
    class="absolute inset-0 hidden h-full w-full object-cover md:block"
    loading="eager"
    fetchpriority="high"
    decoding="async"
    quality={80}
    widths={[768, 1024, 1280, 1920]}
    sizes="100vw"
  />
  <!-- Mobile Background Image - LCP element with high priority -->
  <Image
    src={heroMobile}
    alt="KhipuX Quito Conference venue and attendees"
    class="absolute inset-0 block h-full w-full object-cover md:hidden"
    loading="eager"
    fetchpriority="high"
    decoding="async"
    quality={80}
    widths={[320, 480, 640, 768]}
    sizes="100vw"
  />

  <!-- Overlay -->
  <div
    class="from-khipu-black/70 via-khipu-black/50 to-khipu-black/80 absolute inset-0 bg-linear-to-b"
  >
  </div>

  <!-- Content Section -->
  <div
    class="text-khipu-white content-container relative z-10 flex h-full flex-col items-start justify-center gap-y-6 py-16 text-left"
  >
    <!-- Event Date Badge -->
    <span
      class="bg-khipu-orange text-khipu-white inline-block rounded-sm px-5 py-2 text-lg font-bold tracking-wider uppercase md:text-xl"
    >
      23-25 February 2026
    </span>

    <h1 class="text-5xl font-bold md:text-7xl">
      <span class="uppercase">Khipu</span>x Quito 2026
    </h1>
    <h2 class="w-full text-2xl font-semibold md:w-1/2 md:text-4xl">
      Democratizing AI in Bioimage and Medical Imaging
    </h2>

    <!-- Application Deadline -->
    <div
      class="border-khipu-orange/50 bg-khipu-black/40 flex items-center gap-3 rounded-lg border-2 px-4 py-3 backdrop-blur-sm"
    >
      <span
        class="text-khipu-white/80 text-sm font-medium tracking-wide uppercase md:text-base"
        >Application Deadline:</span
      >
      <span class="text-khipu-orange text-lg font-bold md:text-xl"
        >31 January 2026</span
      >
    </div>

    <!-- Buttons -->
    <div class="flex flex-row flex-wrap gap-4 md:gap-x-8">
      <a
        href="#register"
        class="bg-khipu-orange text-khipu-white relative z-10 rounded-full px-6 py-3 font-bold text-nowrap transition hover:opacity-90 md:px-8 md:py-4"
        >Apply Now!</a
      >
      <a
        href="#schedule"
        class="bg-khipu-orange text-khipu-white relative z-10 rounded-full px-6 py-3 font-bold text-nowrap transition hover:opacity-90 md:px-8 md:py-4"
        >Program Overview</a
      >
    </div>
  </div>
</section>

<style>
  .hero {
    /* Ensure the hero takes up good viewport space */
    min-height: max(80vh, 500px);
  }
</style>
