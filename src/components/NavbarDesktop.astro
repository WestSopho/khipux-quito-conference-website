---
import KhipuLogo from "../assets/khipu-logo.svg";
import KhipuCircle from "../assets/khipu-circle.svg";
---

<!-- Desktop Navigation -->
<nav
  class="fixed hidden w-full items-center justify-between gap-x-4 px-12 py-4 inset-x-0 md:flex"
>
  <!-- Logo and Text -->
  <div class="flex shrink-0 items-center gap-x-8">
    <KhipuLogo
      class="text-khipu-orange h-20 w-auto origin-center -rotate-90"
      role="img"
      aria-label="Khipu Logo"
    />
    <p class="text-khipu-white text-3xl font-bold">KHIPUx Quito</p>
  </div>

  <!-- Navigation Links  -->
  <div
    class="text-khipu-white flex min-w-0 flex-1 items-center justify-center gap-x-8 font-bold flex-wrap"
  >
    <a href="/">About</a>
    <a href="/">Speakers</a>
    <a href="/">Schedule</a>
  </div>

  <div class="relative flex shrink-0 items-center justify-center">
    <KhipuCircle
      class="pointer-events-none absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 -z-10 h-[220px] w-[220px] text-khipu-orange"
      preserveAspectRatio="xMidYMid meet"
      role="img"
      aria-label="Khipu Circle"
    />
    <button
      class="bg-khipu-orange text-khipu-white rounded-full px-8 py-4 font-bold text-nowrap relative z-10"
    >
      Register Now!
    </button>
  </div>
</nav>
